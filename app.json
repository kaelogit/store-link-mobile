{
  "expo": {
    "name": "StoreLink",
    "slug": "store-link-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "storelink",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ng.storelink.app",
      "associatedDomains": [
        "applinks:storelink.ng",
        "applinks:*.storelink.ng"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "StoreLink requires camera access for the Product Studio.",
        "NSPhotoLibraryUsageDescription": "StoreLink requires gallery access to upload product assets."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "package": "ng.storelink.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "storelink.ng",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "*.storelink.ng",
              "pathPrefix": "/"
            }
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-audio",
      "expo-video",
      "expo-image-picker",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow StoreLink to use the camera to verify your identity.",
          "microphonePermission": "Allow StoreLink to use the microphone for cinematic reels."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": "https://storelink.ng"
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}