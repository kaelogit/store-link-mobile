{
  "expo": {
    "name": "StoreLink",
    "slug": "store-link-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "storelink",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": false
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ng.storelink.app",
      "associatedDomains": [
        "applinks:storelink.ng",
        "applinks:*.storelink.ng"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "StoreLink needs camera access so you can take photos of your products.",
        "NSPhotoLibraryUsageDescription": "StoreLink needs gallery access so you can upload your product photos.",
        "NSMicrophoneUsageDescription": "StoreLink needs microphone access for recording high-quality video reels."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "package": "ng.storelink.app",
      "softwareKeyboardLayoutMode": "pan",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "storelink.ng",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "*.storelink.ng",
              "pathPrefix": "/"
            }
          ]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-audio",
      "expo-video",
      "expo-image-picker",
      "expo-notifications",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow StoreLink to use the camera for product photos.",
          "microphonePermission": "Allow StoreLink to use the microphone for your video reels."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          }
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": "https://storelink.ng"
      },
      "eas": {
        "projectId": "d07b455a-520b-48fb-b718-d1b7634cb2af"
      }
    }
  }
}